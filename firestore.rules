
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Students can only read their own document.
    // Creation/Update/Deletion is handled by admin/server-side logic.
    match /students/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // No client-side writes
    }

    // Admins can only read their own document.
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // No client-side writes
    }

    // Registered and Pending devices can only be read by an admin through a server-side function.
    // Client-side read is blocked.
    match /registeredDevices/{deviceId} {
      allow read, write: if false;
    }
    match /pendingDevices/{deviceId} {
       allow read, write: if false;
    }
  }
}
