
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Admins can read/write all student and device data
    match /students/{studentId} {
      allow read, write: if isAdmin();
      // Students can only read their own data
      allow read: if request.auth != null && request.auth.uid == studentId;
    }

    match /pendingDevices/{deviceId} {
      allow read, write, delete: if isAdmin();
    }
    
    match /registeredDevices/{deviceId} {
      allow read, write, delete: if isAdmin();
    }

    // Admins can read their own document (for login verification)
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
    }
  }
}
