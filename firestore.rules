rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admin user can read and write all documents.
    // This rule is broad but necessary for the admin panel to function correctly,
    // allowing it to fetch lists of students, devices, etc.
    // The security is enforced by checking for a custom claim 'admin' which is set securely.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Students can read and update their own document.
    match /students/{studentId} {
      allow read, update: if request.auth.uid == studentId;
    }
    
    // Students can read the devices registered to their own studentId.
    match /registeredDevices/{deviceId} {
       allow read: if request.auth.uid == resource.data.studentId;
    }

    // Any authenticated user can create a pending device request.
    // This is safe because the document contains their UID, and only an admin can approve it.
    match /pendingDevices/{pendingDeviceId} {
      allow create: if request.auth != null;
    }
  }
}
