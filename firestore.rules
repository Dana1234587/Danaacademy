rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admins can read/write anything.
    // This is the simplest rule for an admin-level user.
    // The security is enforced by checking the custom claim.
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
    
    // Students can read their own document.
    match /students/{studentId} {
      allow read, update: if request.auth.uid == studentId;
    }

    // A logged-in user can check for their own document in the admins collection.
    // This is needed for the app-store logic to determine the user's role.
    match /admins/{adminId} {
        allow read: if request.auth.uid == adminId;
    }

    // Students can see their own registered devices.
    match /registeredDevices/{deviceId} {
        allow read: if exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }
    
    // Any authenticated user can create a pending device request.
     match /pendingDevices/{pendingDeviceId} {
      allow create: if request.auth != null;
    }
  }
}
