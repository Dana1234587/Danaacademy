
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admins can read their own document
    match /admins/{adminId} {
      allow read, write: if request.auth.uid == adminId;
    }

    // Students can read their own document. Admins can read all students.
    match /students/{studentId} {
      allow read: if request.auth.uid == studentId || exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow write: if request.auth.uid == studentId || exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins can read all pending/registered devices.
    // Students can only add a pending device or read their own registered devices.
    match /pendingDevices/{docId} {
      allow read, write, delete: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null;
    }
    
    match /registeredDevices/{docId} {
       allow read, write, delete: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
       // Allow a logged-in user to read their own devices
       allow read: if request.auth.uid == resource.data.studentId;
    }
  }
}
