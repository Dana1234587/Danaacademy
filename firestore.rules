rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Authenticated users can only read their own documents in 'admins' or 'students'
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    match /students/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins can read and write all student and device data
    match /students/{studentId} {
        allow list, read, write, delete: if request.auth != null && request.auth.token.admin == true;
    }

    match /pendingDevices/{deviceId} {
        allow list, read, write, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /registeredDevices/{deviceId} {
        allow list, read, write, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
