rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.email == 'admin@dana-academy.com';
    }

    // --- Students Collection Rules ---
    match /students/{studentId} {
      // Admin can list all students, and perform any action on any student doc.
      // A logged-in user can only read their own document.
      allow list: if isAdmin();
      allow read: if isAdmin() || request.auth.uid == studentId;
      allow write: if isAdmin();
    }

    // --- Pending Devices Collection Rules ---
    match /pendingDevices/{deviceId} {
      // Any authenticated user can create a pending device request (for themselves).
      // This is crucial for the first-time login flow.
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      // Only the admin can read the list of pending devices or delete them.
      allow list, read, delete: if isAdmin();
    }

    // --- Registered Devices Collection Rules ---
    match /registeredDevices/{deviceId} {
       // Admin can list all registered devices.
      allow list: if isAdmin();
      // Admin can read any device doc. A student can only read their own.
      allow read: if isAdmin() || (request.auth.uid == resource.data.studentId);
      // Only admin can write (create, update, delete) registered devices.
      allow write: if isAdmin();
    }
  }
}
