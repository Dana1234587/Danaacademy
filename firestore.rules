rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'students' collection
    match /students/{userId} {
      // Admins can perform all actions.
      // Students can only read their own document.
      allow list, write, delete: if isAdmin();
      allow read: if isAdmin() || request.auth.uid == userId;
    }
    
    // Admins can read their own data
    match /admins/{userId} {
        allow read: if request.auth.uid == userId;
    }

    // Admins have full access to device management collections
    match /pendingDevices/{docId} {
        allow read, list, write, delete: if isAdmin();
    }
    match /registeredDevices/{docId} {
        allow read, list, write, delete: if isAdmin();
    }
  }
}
