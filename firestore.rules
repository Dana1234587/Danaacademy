rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Function ---
    // Checks if the user making the request is an admin.
    // It does this by checking for their UID in the 'admins' collection.
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- Student Data ---
    // Students can only read their own document.
    match /students/{studentId} {
      allow read: if request.auth.uid == studentId || isAdmin();
      allow list, write: if isAdmin();
    }

    // --- Device Management ---
    // Any authenticated user can request a new device.
    // Only admins can manage the lists.
    match /pendingDevices/{deviceId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if isAdmin();
    }

    match /registeredDevices/{deviceId} {
       allow read, list, create, update, delete: if isAdmin();
    }

    // --- Admin Collection ---
    // Only admins can read this collection. No one can write to it from the app.
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false; 
    }
  }
}
